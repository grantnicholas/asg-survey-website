extends layout

block content
  .row#login-row
    .col-md-4.col-md-offset-4
      h1.text-center ASG SURVEY DATA REGISTRATION
      a.btn.btn-default.center-block(href="/login") BACK TO LOGIN
      form(name="addUser", role="form", method="post",action="/register")
        .form-group
          label.control-label(for='email') Email address
          input.form-control(type="email", placeholder="Email", name="email" required)
        .form-group
          label.control-label(for='password') Password
          input.form-control(type="password", placeholder="Password", name="password" required)
        .form-group.text-center
          button.btn.btn-primary#register(type="submit") Sign up



